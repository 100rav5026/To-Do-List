<%- include("header") -%>

<body>
  <div class="box" id="heading">
    <h1><%= pageTitle%></h1>
  </div>

  <div class="box">
    <% for(var i = 0; i<todolistitems.length; i++){ %>
    <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= todolistitems[i]._id %>" onchange="this.form.submit()">
      <p><%= todolistitems[i].name%></p>
    </div>
    </form>
    <% } %>

    <form class="item" action="/" method="post">
      <input type="text" name="todolistitems" placeholder="Add item" autocomplete="off">
      <button type="submit" name="button" value=<%= pageTitle%>>+</button>
    </form>
  </div>

</body>

<%- include("footer") -%>
